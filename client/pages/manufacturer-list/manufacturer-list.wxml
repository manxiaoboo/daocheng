<view style="padding:6px">
        <image src="http://p0oy6nmva.bkt.clouddn.com/home_banner.jpg" style="width:100%;height:110px;border-radius:6px;"/>
    </view>
<view wx:if="{{manufacturers.length<=0}}" class="empty_block">
    <image src="http://p0oy6nmva.bkt.clouddn.com/empty.png" class="empty_img" />
    <text class="p">目前没有厂商入驻</text>
</view>
<view class="page__bd" wx:if="{{manufacturers.length>0}}">
    <view class="weui-panel weui-panel_access">
        <view class="weui-panel__hd">厂商列表</view>
        <view class="weui-panel__bd">
            <navigator url="../manufacturer-shop/manufacturer-shop?id={{m.manufacturer.id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{manufacturers}}" wx:for-item="m" wx:for-index="id">
                <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                    <image class="weui-media-box__thumb" src="{{'http://' + m.manufacturer.head}}" />
                </view>
                <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                    <view class="weui-media-box__title">{{m.manufacturer.name}}</view>
                    <view class="weui-media-box__desc">{{m.manufacturer.intro}}</view>
                </view>
            </navigator>
        </view>
    </view>
</view>