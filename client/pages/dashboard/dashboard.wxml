<view wx:if="{{canShow}}">
<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="375" height="250"/>
    </swiper-item>
  </block>
</swiper>
<view class="page__bd" style="padding-bottom:5px;">
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__bd" style="text-align:center;">
                <view class="fun_btn">
                    <navigator url="../goods-type-list/goods-type-list">
                        <image class="weui-media-box__thumb" src="http://p0oy6nmva.bkt.clouddn.com/fenlei.png" />
                        <text>商品分类</text>
                    </navigator>
                </view>
                <view class="fun_btn">
                    <navigator url="../goods-hot-list/goods-hot-list">
                        <image class="weui-media-box__thumb" src="http://p0oy6nmva.bkt.clouddn.com/remen.png" />
                        <text>热门商品</text>
                    </navigator>
                </view>
                <view class="fun_btn">
                    <navigator url="../goods-ad-list/goods-ad-list">
                        <image class="weui-media-box__thumb" src="http://p0oy6nmva.bkt.clouddn.com/guanggao.png" />
                        <text>优质商品</text>
                    </navigator>
                </view>
                <view class="fun_btn">
                    <navigator url="../order-farmer-list/order-farmer-list" wx:if="me.roleName == '农户'">
                        <image class="weui-media-box__thumb" src="http://p0oy6nmva.bkt.clouddn.com/dingdan.png" />
                        <text>我的订单</text>
                    </navigator>
                </view>
            </view>
        </view>
</view>
    <view class="page__bd">
            <view class="weui-panel weui-panel_access" wx:if="{{goods.length>0}}">
                <view class="weui-panel__bd">
                    <navigator url="../distributor-goods-view/distributor-goods-view?id={{g.id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{goods}}" wx:for-item="g"  wx:for-index="id">
                        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                            <image class="weui-media-box__thumb" src="{{'http://' + g.photos_arr[0]}}" />
                        </view>
                        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                            <view class="weui-media-box__title">{{g.name}}</view>
                            <view class="weui-media-box__desc">{{g.intro}}</view>
                        </view>
                    </navigator>
                </view>
                <view class="weui-panel__ft">
                    <navigator url="../goods-hot-list/goods-hot-list" class="weui-cell weui-cell_access weui-cell_link">
                        <view class="weui-cell__bd">查看更多</view>
                        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                    </navigator>
                </view>
            </view>
            <view wx:if="{{goods.length<=0}}" class="empty_block">
                <image src="http://p0oy6nmva.bkt.clouddn.com/empty.png" class="empty_img"/>
                <text class="p">暂时没有商品上架哦</text>
            </view>
    </view>
</view>