
swiper {
    height:250px;
}

.banner {
    width:100%;
    height:100px;
    border-radius: 6px;
}

.page__banner {
    padding: 0 10px;
}

.fun_btn{
    width:20%;
    float:left;
}

.fun_btn image{
    width:40px;
    height:40px;
    border-radius: 50%;
    margin:12px 0;
}

.fun_btn text{
    font-size: 12px;
    color:#555;
    position: relative;
    bottom:7px;
}

.weui-navbar{
    background: #fff;
    border-bottom: none;
}

.weui-media-box__hd_in-appmsg {
    width: 40px;
    height: 40px;
    line-height: 40px;
}

.weui-media-box__hd_in-appmsg image{
    border-radius:50%;
}

.weui-media-box {
    padding: 10px;
}

.weui-media-box__title {
    font-weight: bold;
    font-size: 12px;
}
.weui-media-box__desc {
    font-size: 12px;
}

.home_item{
    margin-top:10px;
}

.driver {
    border-bottom:1px solid #ccc;
    margin: 5px 18px 0 18px;
}

.home_item_button{
    width: 60px;
    font-size: 11px;
    padding: 0 10px;
    height: 25px;
    line-height: 25px;
}

.weui-article {
    padding: 0 15px;
}

.weui-article__p{
    margin:0;
}

.home_item_content{
    display: inline;
}

.home_item_image{
    width:120px;
    height:120px;
    margin-right:5px;
}

.home_item_footer{
    height:30px;
    line-height:30px;
    padding:0 15px;
}

.weui-search-bar {
    border:none;
}

#question .weui-media-box__info {
    font-size:12px;
}

.empty_block{
    text-align: center;
}

.empty_img{
    margin-top:20%;
    width:210px;
    height:110px;
}

.p{
    display: block;
}