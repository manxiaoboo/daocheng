<form bindsubmit="editGoods">
<view class="weui-cells__title">修改产品信息</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input {{input_name?'':'weui-cell_warn'}}">
        <view class="weui-cell__hd">
            <view class="weui-label">产品名称</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" bindinput="doInputName" value="{{input_name}}" name="name" placeholder="请输入产品名称"/>
        </view>
    </view>
    <view class="weui-cell weui-cell_input {{input_Type?'':'weui-cell_warn'}}">
        <view class="weui-cell__hd">
            <view class="weui-label">产品类别</view>
        </view>
        <view class="weui-cell__bd">
            <picker bindchange="typeChange" value="{{typeIndex}}" range="{{pickerTypes}}" name="type">
                        <view class="weui-select">{{pickerTypes[typeIndex]}}</view>
                    </picker>
        </view>
    </view>
</view>
<view class="weui-cells__title">产品简介</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="请输入产品简介" style="height: 3.3em" name="intro" value="{{input_intro}}" bindinput="doInputIntro"/>
                </view>
            </view>
</view>

<view class="page__bd">
        <view class="weui-cells">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <view class="weui-uploader">
                        <view class="weui-uploader__hd">
                            <view class="weui-uploader__title">图片</view>
                            <view class="weui-uploader__info">{{goods.photos_arr.length}}/9</view>
                        </view>
                        <view class="weui-uploader__bd">
                            <view class="weui-uploader__files" id="uploaderFiles">
                                <block wx:for="{{goods.photos_arr}}">
                                    <view class="weui-uploader__file" bindtap="deleteImage" id="{{item}}">
                                        <image class="weui-uploader__img" src="{{'http://'+item}}" mode="aspectFill" />
                                    </view>
                                </block>
                            </view>
                            <view class="weui-uploader__input-box">
                                <view class="weui-uploader__input" bindtap="uploadImage"></view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
  <button class="weui-btn" type="primary" formType="submit">确认修改</button>
</form>