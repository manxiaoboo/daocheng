<view class="classify">  
  <scroll-view class='left-navbar' scroll-y="true">  
    <view wx:for="{{types}}" class="{{ currentTab == index ? 'active' : '' }}" wx:key="id" bindtap="{{ currentTab != index ? 'navbarTap':'' }}" id="{{index}}" data-screenId="{{item.id}}">{{item.name}}  
    </view>
  </scroll-view>  
  <scroll-view id="right" scroll-y="true" scroll-top="{{scrollTop}}">  
    <view class="page__bd">
            <view class="weui-panel weui-panel_access" wx:if="{{goods.length>0}}">
                <view class="weui-panel__bd">
                    <navigator url="../distributor-goods-view/distributor-goods-view?id={{g.id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{goods}}" wx:for-item="g"  wx:for-index="id">
                        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                            <image class="weui-media-box__thumb" src="{{'http://' + g.photos_arr[0]}}" />
                        </view>
                        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                            <view class="weui-media-box__title">{{g.name}}</view>
                            <view class="weui-media-box__desc">{{g.intro}}</view>
                        </view>
                    </navigator>
                </view>
                <view class="weui-panel__ft">
                    <navigator url="../goods-type-info-list/goods-type-info-list?id={{screenId}}" class="weui-cell weui-cell_access weui-cell_link">
                        <view class="weui-cell__bd">查看更多</view>
                        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                    </navigator>
                </view>
            </view>
            <view wx:if="{{goods.length<=0}}" class="empty_block">
                <image src="http://p0oy6nmva.bkt.clouddn.com/empty.png" class="empty_img"/>
                <text class="p">该分类没有商品</text>
            </view>
    </view>
  </scroll-view>  
</view>  